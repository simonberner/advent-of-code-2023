{
  "name": "advent-of-code-2023",
  "version": "0.1.0",
  "description": "Advent of Code 2023 (adventofcode.com)",
  "type": "module",
  "scripts": {
    "start": "func() { node --experimental-modules ./day${1:-01}/puzzle.js; }; func",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js jest --verbose",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js jest --watch"
  },
  "jshintConfig": {
    "esversion": 11
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.jsx?$",
    "transform": {}
  },
  "author": "Simon Berner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simonberner/advent-of-code-2023/issues"
  },
  "homepage": "https://github.com/simonberner/advent-of-code-2023#readme",
  "devDependencies": {
    "jest": "^29.7.0",
    "jshint": "^2.13.6"
  }
}
